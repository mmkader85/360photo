<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="description" content="<%= title %>" />
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <% include favicon %>
        <script src="/javascripts/aframe.min.js"></script>
        <script src="/javascripts/aframe-animation-component@3.0.1.js"></script>
        <script src="/javascripts/aframe-event-set-component@3.0.1.js"></script>
        <script src="/javascripts/aframe-layout-component@3.0.1.js"></script>
        <script src="/javascripts/aframe-template-component@3.1.1.js"></script>
        <script src="/javascripts/set-image.js"></script>
    </head>
<body>
    <a-scene>
        <a-assets>
            <img id="property" crossorigin="anonymous" src="/images/360/property.jpg" />
            <img id="property-thumb" crossorigin="anonymous" src="/images/360/thumb-property.jpg" />
            <img id="workout-thumb" crossorigin="anonymous" src="/images/360/thumb-workout.jpg" />
            <img id="outdoor-thumb" crossorigin="anonymous" src="/images/360/thumb-outdoor.jpg" />
            <audio id="click-sound" crossorigin="anonymous" src="/audios/click.ogg"></audio>
            <img id="workout" crossorigin="anonymous" src="/images/360/workout.jpg">
            <img id="outdoor" crossorigin="anonymous" src="/images/360/outdoor.jpg" />

            <!-- Image link template to be reused. -->
            <script id="link" type="text/html">
                <a-entity class="link"
                    geometry="primitive: plane; height: 1; width: 1"
                    material="shader: flat; src: ${thumb}"
                    event-set__1="_event: mousedown; scale: 1 1 1"
                    event-set__2="_event: mouseup; scale: 1.2 1.2 1"
                    event-set__3="_event: mouseenter; scale: 1.2 1.2 1"
                    event-set__4="_event: mouseleave; scale: 1 1 1"
                    set-image="on: click; target: #image-360; src: ${src}"
                    sound="on: click; src: #click-sound"></a-entity>
            </script>
        </a-assets>

        <!-- 360-degree image. -->
        <a-sky id="image-360" radius="10" src="#property"></a-sky>

        <!-- Image links. -->
        <a-entity id="links" layout="type: line; margin: 1.5" position="0 -1 -4">
            <a-entity template="src: #link" data-src="#workout" data-thumb="#workout-thumb"></a-entity>
            <a-entity template="src: #link" data-src="#property" data-thumb="#property-thumb"></a-entity>
            <a-entity template="src: #link" data-src="#outdoor" data-thumb="#outdoor-thumb"></a-entity>
        </a-entity>

        <!-- Camera + cursor. -->
        <a-entity camera look-controls>
            <a-cursor id="cursor"
                animation__click="property: scale; startEvents: click; from: 0.1 0.1 0.1; to: 1 1 1; dur: 150"
                animation__fusing="property: fusing; startEvents: fusing; from: 1 1 1; to: 0.1 0.1 0.1; dur: 1500"
                event-set__1="_event: mouseenter; color: springgreen"
                event-set__2="_event: mouseleave; color: black"
                fuse="true"
                raycaster="objects: .link"></a-cursor>
        </a-entity>
    </a-scene>
</body>
</html>
